#[core]
	#excludesfile = $HOME/.wash/git/gitignore  # variable not working
[user]
	name = XonqNopp
	email = xonqnoppp@gmail.com

[alias]
	# basic
	st       = status -sb --ignore-submodules=none

	# files
	chmodx   = update-index --chmod=+x
	grin = grep -in

	# commit
	cm       = commit -m
	cof      = commit --fixup
	cos      = commit --squash
	cam      = commit -a -m
	caf      = commit -a --fixup
	cas      = commit -a --squash
	amend    = commit --amend
	aamend   = commit --amend -a
	amende   = commit --amend --no-edit
	aamende  = commit --amend --no-edit -a

	# tag
	tg       = tag -n  # show tag message
	tagle    = tag -a -m
	lasttag  = tag -l --contains HEAD
	lastdate = log -1 --pretty=format:"%cd" --date=short

	# rebase
	rebi  = rebase -i
	recit = rebase --continue
	reboa = rebase --abort
	remas = rebase master
	redev = rebase development
	rebum = rebase upstream/master
	rebud = rebase upstream/development
	frum  = !git fetch -p upstream && git rebum
	frud  = !git fetch -p upstream && git rebud

	# branches
	co     = checkout
	coo    = checkout -
	com    = checkout master
	cod    = checkout development
	cb     = checkout -b
	br     = branch
	rewind = merge --no-ff
	bra    = branch -va
	remaster = !git co master && git pull && git coo && git rebase master && git st
	redev    = !git co development && git pull && git coo && git rebase development && git st

	# remote
	putsh = push --follow-tags
	rem   = remote -v
	fep   = fetch -p
	fup   = fetch -p upstream
	pinup = pull   upstream  # must add branch when invoking
	rebu  = rebase upstream  # must add branch
	murge = merge  upstream  # must add branch
	poush = !git push upstream && git push
	pushf = push --force
	poushf = !git push upstream && git pushf
	pushu = push -u
	pushuu = push -u upstream

	# diff
	df = difftool --ignore-submodules=none
	dfh = !git df HEAD^
	mt = mergetool
	mta = mergetool --tool=vimgitall
	dispatch = format-patch -M -n -s -o outgoing

	# log
	slog = log --graph --pretty=format:'%C(red)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr) %C(bold blue)%an%C(reset)' -1
	flog = log --graph --all --pretty=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%ai%C(reset) %C(green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' -1
	browse2vim = log --graph --all --pretty=format:'%h {%ci} %an %% %s%d'
	bo         = !git browse2vim | vim -S $HOME/.wash/vim/ftplugin/git/browse.vim -nRM -

	# misc
	stlog = !echo && git st && echo && git slog

	# submodule
	sub = submodule
	subu   = submodule update --init
	sugus  = submodule update --init --recursive 
	suburb = submodule update --init --recursive --remote

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[merge]
	tool = vimgit

[mergetool "vimgit"]
	cmd = vim -d -f -c 'wincmd J' "$MERGED" "$LOCAL" "$REMOTE"
	# $BASE is not worth it

[mergetool "vimgitall"]
	cmd = vim -d -f -c 'wincmd J' "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
	# if I really want to see $BASE

[rebase]
	autosquash = true

[pull]
	rebase = true

[push]
	followTags = true

[instaweb]
	local = true
